    "cookie-parser": "^1.4.3",
    "emotion": "^9.2.3",
    "emotion-server": "^9.2.3",
    "express": "^4.16.3",
    "formik": "^1.0.2",
    "graphql": "0.13.2",
    "isomorphic-unfetch": "^2.0.0",
    "js-cookie": "^2.2.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "qs": "^6.5.2",
